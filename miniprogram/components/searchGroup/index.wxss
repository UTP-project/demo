/* components/searchGroup/index.wxss */

.container {
  background: #eee;
  border-radius: 6px;
  padding: 12px;
}

.item-wrapper {
  display: flex;
}

.front-wrapper {
  flex-basis: 12%;
  flex-grow: 1;
}

.mid-wrapper {
  flex-basis: 86%;
  flex-grow: 1;
}

.extra-wrapper {
  flex-basis: 12%;
  flex-grow: 1;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}

.item-wrapper:not(:last-child) .mid-wrapper {
  position: relative;
  margin-bottom: 16px;
  overflow: visible;
}

.item-wrapper:not(:last-child) .mid-wrapper::after {
  content: '';
  height: 1px;
  background: #ccc;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 12px;
  transform: translateY(8px)
}

.remove-icon {
  width: 12px;
  height: 12px;
}

.add-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  max-height: 36px;
}

.add-icon {
  width: 16px;
  height: 16px;
}