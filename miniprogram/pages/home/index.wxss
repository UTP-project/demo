/* miniprogram/pages/home/index.wxss */

.map-container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.map {
  width: 100%;
  height: 100%;
}

.cover-view {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}

.cover-container {
  background: #fff;
  height: 240px;
  border-radius: 16px 16px 0 0;
  padding: 0 24px;
  overflow-y: scroll;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.markers-search {
  margin: 24px 0;
}