/* miniprogram/pages/home/index.wxss */

.map-container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.map {
  width: 100%;
  height: 100%;
}

.cover-view {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}

.cover-container {
  background: #fff;
  border-radius: 16px 16px 0 0;
  display: flex;
  flex-direction: column;
}

.collapse-wrapper {
  flex-shrink: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 6px;
  height: 36px
}

.collapse-icon {
  width: 16px;
  height: 16px;
  pointer-events: none;
}

.content-wrapper {
  padding: 12px 24px;
  overflow-y: scroll;
}

.btn-wrapper {
  margin: 36px 24px;
}

.btn {
  color: rgb(255, 255, 255);
  background-color: rgb(0, 178, 178);
}

.btn::after {
  border: none;
}

.btn[disabled] {
  color: rgb(255, 255, 255) !important;
  background-color: rgba(0, 178, 178, 0.4) !important;
}